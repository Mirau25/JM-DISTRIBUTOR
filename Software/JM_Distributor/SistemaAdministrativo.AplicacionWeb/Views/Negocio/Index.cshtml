
@{
    ViewData["Title"] = "Negocio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4 p-4 m-auto">
    <div class="card-body">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800"><strong class="text-black">Datos del Negocio</strong></h1>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <form>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtNumeroDocumento" class="text-dark">Numero Documento</label>
                                    <input type="text" class="form-control form-control-sm input-validar no-border-input" id="txtNumeroDocumento" name="Numero Documento">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtRazonSocial" class="text-dark">Razon Social</label>
                                    <input type="text" class="form-control form-control-sm input-validar no-border-input" id="txtRazonSocial" name="Razon Social">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtCorreo" class="text-dark">Correo</label>
                                    <input type="email" class="form-control form-control-sm input-validar no-border-input" id="txtCorreo" name="Correo">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtDireccion" class="text-dark">Direccion</label>
                                    <input type="text" class="form-control form-control-sm input-validar no-border-input" id="txtDireccion" name="Direccion">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txTelefono" class="text-dark">Telefono</label>
                                    <input type="text" class="form-control form-control-sm input-validar no-border-input" id="txTelefono" name="Telefono">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtImpuesto" class="text-dark">% Impuesto</label>
                                    <input type="text" class="form-control form-control-sm input-validar no-border-input" id="txtImpuesto" name="Impuesto">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtSimboloMoneda" class="text-dark">Simbolo Moneda</label>
                                    <input type="text" class="form-control form-control-sm input-validar no-border-input" id="txtSimboloMoneda" name="Simbolo Moneda">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtLogo" class="text-dark">Logo</label>
                                    <input class="form-control-file no-border-input text-dark" type="file" id="txtLogo">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="row">
                                <div class="col-sm-12 text-center">
                                    <img id="imgLogo" style="max-width:300px; margin: 0 auto;" src="" class="rounded" alt="Logo">
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12 text-center">
                                    <button class="btn btn-block btn-sm  rounded-pill p-2" type="button" id="btnGuardarCambios">Guardar Cambios</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/vistas/Negocio_Index.js"></script>
}