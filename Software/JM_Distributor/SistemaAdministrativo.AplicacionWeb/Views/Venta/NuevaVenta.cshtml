
@{
    ViewData["Title"] = "Nueva Cotización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet">

   
}

<div class="row">
    <div class="col-sm-8">
        <div class="row">
            <div class="col-sm-12">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800"><strong class="text-black">Nueva Cotización</strong></h1>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-6">
                                <label for="txtDocumentoCliente" class="text-black">Numero Documento</label>
                                <select class="form-control form-control-sm input-validar no-border-input" id="txtDocumentoCliente">
                                    <option value=""></option> <!-- Opcional: Puedes añadir una opción vacía -->
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-12">
                                <label for="txtNumeroDocumento" class="text-black">Productos</label>
                                <select class="form-control form-control-sm input-validar no-border-input" id="cboBuscarProducto">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-sm text-black input-validar no-border-input" id="tbProducto">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Producto</th>
                                            <th>Cantidad</th>
                                            <th>Precio</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="col-sm-4">
        <div class="row">
            <div class="col-sm-12">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text text-black" for="cboTipoDocumentoVenta">Tipo</label>
                            </div>
                            <select class="custom-select" id="cboTipoDocumentoVenta">
                            </select>
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text text-black" id="inputGroupSubTotal">Sub Total</span>
                            </div>
                            <input type="text" class="form-control text-right " aria-label="Small" aria-describedby="inputGroupSubTotal" id="txtSubTotal" disabled>
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text text-black" id="inputGroupIGV">IGV(18%)</span>
                            </div>
                            <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupIGV" id="txtIGV" disabled>
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text text-black" id="inputGroupTotal">Total</span>
                            </div>
                            <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupTotal" id="txtTotal" disabled>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group mb-0">
            <button class="btn btn-dark text-white btn-sm btn-block bg-black" id="btnTerminarVenta">Terminar Venta</button>
        </div>


    </div>
</div>

@section Scripts{
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/select2/es.min.js"></script>
    <script src="~/js/vistas/Nueva_Venta.js"></script>

}
